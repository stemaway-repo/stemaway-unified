<section class="homepage-jumbotron experts-homepage" style="--jl-rotate: {{theme-setting "hero_links_rotate_ms"}}ms">
  <div class="jumbotron">
    <div class="jumbotron-image">
      <img loading="lazy" src="{{theme-setting "hero_image"}}" alt="" />
    </div>

    <div class="jumbotron-titles jl-titles">
      {{#if (theme-setting "hero_slide_1_enabled")}}
        <div class="jl-title-window">
          <h1>{{theme-setting "hero_title_1"}}</h1>
          <h2>{{theme-setting "hero_subtitle_1"}}</h2>
        </div>
      {{/if}}
      {{#if (theme-setting "hero_slide_2_enabled")}}
        <div class="jl-title-window">
          <h1>{{theme-setting "hero_title_2"}}</h1>
          <h2>{{theme-setting "hero_subtitle_2"}}</h2>
        </div>
      {{/if}}
      {{#if (theme-setting "hero_slide_3_enabled")}}
        <div class="jl-title-window">
          <h1>{{theme-setting "hero_title_3"}}</h1>
          <h2>{{theme-setting "hero_subtitle_3"}}</h2>
        </div>
      {{/if}}
    </div>

    <div class="jumbotron-quick-links" style="--jl-rotate: {{theme-setting "hero_links_rotate_ms"}}ms;">
      <input class="jl-toggle" type="radio" name="jl-quick-links" id="jl-1" />
      <input class="jl-toggle" type="radio" name="jl-quick-links" id="jl-2" />
      <input class="jl-toggle" type="radio" name="jl-quick-links" id="jl-3" />

      <div class="jl-slides">
        {{#if (theme-setting "hero_slide_1_enabled")}}
          <div class="jumbotron-quick-links-window" id="jl-slide-1">
            <div class="jumbotron-quick-links-container">
              <h3>{{{theme-setting "hero_links_title"}}}</h3>
              <ul>
                <li>
                  <a href="{{theme-setting "hero_link_1_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero_link_1_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero_link_1_icon"}}"></use>
                    </svg>{{theme-setting "hero_link_1_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero_link_2_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero_link_2_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero_link_2_icon"}}"></use>
                    </svg>{{theme-setting "hero_link_2_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero_link_3_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero_link_3_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero_link_3_icon"}}"></use>
                    </svg>{{theme-setting "hero_link_3_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero_link_4_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero_link_4_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero_link_4_icon"}}"></use>
                    </svg>{{theme-setting "hero_link_4_title"}}
                  </a>
                </li>
              </ul>
            </div>
          </div>
        {{/if}}

        {{#if (theme-setting "hero_slide_2_enabled")}}
          <div class="jumbotron-quick-links-window" id="jl-slide-2">
            <div class="jumbotron-quick-links-container">
              <h3>{{{theme-setting "hero_links_title_2"}}}</h3>
              <ul>
                <li>
                  <a href="{{theme-setting "hero2_link_1_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero2_link_1_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero2_link_1_icon"}}"></use>
                    </svg>{{theme-setting "hero2_link_1_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero2_link_2_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero2_link_2_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero2_link_2_icon"}}"></use>
                    </svg>{{theme-setting "hero2_link_2_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero2_link_3_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero2_link_3_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero2_link_3_icon"}}"></use>
                    </svg>{{theme-setting "hero2_link_3_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero2_link_4_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero2_link_4_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero2_link_4_icon"}}"></use>
                    </svg>{{theme-setting "hero2_link_4_title"}}
                  </a>
                </li>
              </ul>
            </div>
          </div>
        {{/if}}

        {{#if (theme-setting "hero_slide_3_enabled")}}
          <div class="jumbotron-quick-links-window" id="jl-slide-3">
            <div class="jumbotron-quick-links-container">
              <h3>{{{theme-setting "hero_links_title_3"}}}</h3>
              <ul>
                <li>
                  <a href="{{theme-setting "hero3_link_1_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero3_link_1_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero3_link_1_icon"}}"></use>
                    </svg>{{theme-setting "hero3_link_1_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero3_link_2_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero3_link_2_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero3_link_2_icon"}}"></use>
                    </svg>{{theme-setting "hero3_link_2_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero3_link_3_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero3_link_3_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero3_link_3_icon"}}"></use>
                    </svg>{{theme-setting "hero3_link_3_title"}}
                  </a>
                </li>
                <li>
                  <a href="{{theme-setting "hero3_link_4_url"}}">
                    <svg class="fa d-icon d-icon-{{theme-setting "hero3_link_4_icon"}} svg-icon svg-node" aria-hidden="true">
                      <use xlink:href="#{{theme-setting "hero3_link_4_icon"}}"></use>
                    </svg>{{theme-setting "hero3_link_4_title"}}
                  </a>
                </li>
              </ul>
            </div>
          </div>
        {{/if}}
      </div>

      <div class="jl-dots" role="tablist" aria-label="Quick links slides">
        <label class="jl-dot" for="jl-1" role="tab" aria-controls="jl-slide-1" tabindex="0"></label>
        <label class="jl-dot" for="jl-2" role="tab" aria-controls="jl-slide-2" tabindex="0"></label>
        <label class="jl-dot" for="jl-3" role="tab" aria-controls="jl-slide-3" tabindex="0"></label>
      </div>
    </div>
  </div>
</section>
